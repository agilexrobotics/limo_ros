<launch>
    <arg name="map_file" default="$(find limon_bringup)/maps/limon.yaml"/>

    <node pkg="amcl" type="amcl" name="amcl" output="screen">
        <rosparam file="$(find limon_bringup)/param/amcl_params.yaml" command="load" />
        <param name="initial_pose_x" value="0"/>
        <param name="initial_pose_y" value="0"/>
        <param name="initial_pose_a" value="0"/>
    </node>

    <arg name="no_static_map" default="false"/>

    <arg name="base_global_planner" default="navfn/NavfnROS"/>
    <!-- <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS"/> -->
    <arg name="base_local_planner" default="base_local_planner/TrajectoryPlannerROS"/>

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

        <param name="base_global_planner" value="$(arg base_global_planner)"/>
        <param name="base_local_planner" value="$(arg base_local_planner)"/>  
        <rosparam file="$(find limon_bringup)/param/planner.yaml" command="load"/>

        <!-- observation sources located in costmap_common.yaml -->
        <rosparam file="$(find limon_bringup)/param/costmap_common.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find limon_bringup)/param/costmap_common.yaml" command="load" ns="local_costmap" />

        <!-- local costmap, needs size -->
        <rosparam file="$(find limon_bringup)/param/costmap_local.yaml" command="load" ns="local_costmap" />
        <param name="local_costmap/width" value="2.0"/>
        <param name="local_costmap/height" value="2.0"/>

        <!-- static global costmap, static map provides size -->
        <rosparam file="$(find limon_bringup)/param/costmap_global_static.yaml" command="load" ns="global_costmap" unless="$(arg no_static_map)"/>
        
        <!-- global costmap with laser, for odom_navigation_demo -->
        <rosparam file="$(find limon_bringup)/param/costmap_global_laser.yaml" command="load" ns="global_costmap" if="$(arg no_static_map)"/>
        <param name="global_costmap/width" value="2.0" if="$(arg no_static_map)"/>
        <param name="global_costmap/height" value="2.0" if="$(arg no_static_map)"/>
        <param name='controller_frequency' value="50.0"/>
    </node>

    <!-- load map -->
    <node pkg="map_server" type="map_server" name="map_server"  args="$(arg map_file)">
    </node>
   
</launch>
